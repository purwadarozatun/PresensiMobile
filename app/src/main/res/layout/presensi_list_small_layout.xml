<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/statusPulangHolder"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_margin="@dimen/ten_dp"
                android:background="@drawable/statusfilter">

                <TextView
                    android:id="@+id/jam_kerja"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="I"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thirty_dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@+id/label"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@+id/nik"
                    android:textSize="15dp"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/jam_masuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@+id/jam_masuk"
                    android:textSize="10dp"></TextView>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@+id/status"
                    android:textSize="10dp"></TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>